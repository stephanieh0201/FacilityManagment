<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="fms.model.use">
	<class name="User" table="user" discriminator-value="U">
		<id name="userID" type="int" column="userID" />
        <property name="firstName" type="string" column="firstName"/>
        <property name="lastName" type="string" column="lastName"/>
        <property name="phoneNumber" type="string" column="phoneNumber"/>
        <property name="address" type="string" column="address"/>
       </class>
       
        <union-subclass name="customer" table="customer">
       		<property name="userID" type="int" column="userID" />
        	<property name="customerID" type="int" column="customerID"/>
        	<property name="creditCard" type="string" column="creditCard"/>
        	<property name="useID" type="int" column="useID"></property>
        	<property name="firstName" type="string" column="firstName"/>
       	 	<property name="lastName" type="string" column="lastName"/>
        	<property name="phoneNumber" type="string" column="phoneNumber"/>
        	<property name="address" type="string" column="address"/>

        </union-subclass>
        
        <union-subclass name="manager" table="manager">
        	<property name="userID" type="int" column="userID" />
        	<property name="employeeID" type="int" column="employeeID"/>
        	<property name="salary" type="double" column="salary"/>
        	<property name="inspectionID" type="int" column="inspectionID"/>
        	<property name="firstName" type="string" column="firstName"/>
       	 	<property name="lastName" type="string" column="lastName"/>
        	<property name="phoneNumber" type="string" column="phoneNumber"/>
        	<property name="address" type="string" column="address"/>

        </union-subclass>
        
</hibernate-mapping>

